    private async void EditCubo(Cubo cubo){
        await JSRuntime.InvokeVoidAsync("editCubeInScene", 
            cubo.X, cubo.Y, cubo.Z, 
            cubo.Scale ?? 1, 
            cubo.RotX ?? 0, cubo.RotY ?? 0, cubo.RotZ ?? 0, 
            cubo.Id.ToString());

        cuboEditando = cubo;
        newItem = new Cubo
        {
            Name = cubo.Name,
            Description = cubo.Description,
            X = cubo.X,
            Y = cubo.Y,
            Z = cubo.Z,
            RotX = cubo.RotX,
            RotY = cubo.RotY,
            RotZ = cubo.RotZ,
            Scale = cubo.Scale
        };

        isAddItemModalVisible = true;
    }

